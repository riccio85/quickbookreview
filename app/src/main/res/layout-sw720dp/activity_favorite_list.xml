<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/LightYellow"
    android:divider="?android:attr/dividerHorizontal"
    tools:context="app.com.example.rihanna.abookfinder.Favorites">

    <fragment
        android:id="@+id/fragment_favorites"
        android:name="app.com.example.rihanna.abookfinder.FavoriteListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/LightYellow"
        tools:layout="@android:layout/list_content" />

    <FrameLayout
        android:id="@+id/detailed_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="app.com.example.rihanna.abookfinder.FavoriteDetailFragment"
        android:background="@color/LightYellow"
        android:layout_weight="2"
        android:visibility="invisible"/>

</LinearLayout>

